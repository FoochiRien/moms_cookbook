<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/fragment_api_recipe_cookbook"
             tools:context="com.adrienne.cookbook_app.RecipeDetail.ApiDetaiRecipeFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_recipe"/>


        <TextView
            android:id="@+id/recipefromapi_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="25dp"/>


    <ImageView
        android:id="@+id/recipefromapi_detail_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="5dp"
        android:elevation="4dp"
        android:layout_gravity="center_horizontal"
        android:background="#e68037"/>

    <TextView
        android:id="@+id/recipefromapi_detail_source"
        android:padding="7dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:textStyle="italic"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Source"/>


    <TextView
        android:id="@+id/recipefromapi_detail_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#273cd7"
        android:text="@string/api_readmore"/>

    <TextView
        android:text="@string/api_categories"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/recipefromapi_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingRight="5dp"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:text="test test test test"/>

</LinearLayout>

</FrameLayout>
