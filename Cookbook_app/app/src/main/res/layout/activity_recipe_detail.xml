<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/apirecipe_detail_screen"
    android:orientation="vertical"
    tools:context="com.adrienne.cookbook_app.RecipeDetail.RecipeDetailActivity">

    <include layout="@layout/toolbar_all_other_pages_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/recipe_detail_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/api_recipe_detail_layout"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
