<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/api_searchresultrecipe_layout"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:elevation="3dp"
                                             android:orientation="vertical"
                                             android:padding="5dp">

    <ImageView
        android:id="@+id/api_recipe_image"
        android:layout_width="89dp"
        android:layout_height="86dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="#de8484"
        android:paddingRight="5dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/api_recipe_source_website"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/api_recipe_title"
        android:layout_width="29dp"
        android:layout_height="17dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/api_recipe_image"
        android:text="@string/api_title"
        app:layout_constraintBottom_toTopOf="@+id/api_recipe_source_website"
        app:layout_constraintLeft_toLeftOf="@+id/api_recipe_source_website"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/api_recipe_source_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="214dp"
        android:text="@string/api_sourcewebite"
        app:layout_constraintBottom_toTopOf="@+id/api_recipe_servings"
        app:layout_constraintRight_toRightOf="parent"/>


    <TextView
        android:id="@+id/api_recipe_servings"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:text="@string/api_servings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/api_recipe_source_website"/>


</android.support.constraint.ConstraintLayout>