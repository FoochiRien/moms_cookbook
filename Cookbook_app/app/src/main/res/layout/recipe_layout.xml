<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/manuelyentered_recipe_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <include layout="@layout/toolbar_all_other_pages_layout"/>


    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="8dp"
        android:text="Title"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/recipe_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="source"
        android:textAllCaps="true"
        android:textSize="14dp"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/recipe_servings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="servings"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/recipe_cooktime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="cooktime"
            android:textAlignment="center"
            android:textStyle="italic"/>

    </LinearLayout>



    <TextView
        android:id="@+id/recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Ingredients"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/recipe_ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/recipe_directions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="directions"/>

    <ListView
        android:id="@+id/recipe_directions_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/recipe_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="notes"/>

    <TextView
        android:id="@+id/recipe_display_notes"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/recipe_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="category"/>

    <TextView
        android:id="@+id/recipe_display_category"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="99dp"/>


</LinearLayout>