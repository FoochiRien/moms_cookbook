<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/manuelyentered_recipe_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:padding="8dp"
        android:text="Title"
        android:textSize="20dp"
        android:textStyle="bold"/>

<!--    <TextView
        android:id="@+id/recipe_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="source"
        android:textAllCaps="true"
        android:textSize="14dp"
        android:textStyle="italic"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/recipe_servings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="servings"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recipe_cooktime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="cooktime"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:padding="8dp"
        android:text="@string/enter_ingredients"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/display_ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:padding="8dp"
        android:text="@string/enter_directions"/>

    <TextView
        android:id="@+id/recipe_directions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="100"
        android:paddingBottom="8dp"
        android:layout_marginBottom="10dp"/>




    <TextView
        android:id="@+id/recipe_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textAllCaps="true"
        android:text="notes"/>

    <TextView
        android:id="@+id/recipe_display_notes"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/recipe_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:padding="8dp"
        android:text="category"/>

    <TextView
        android:id="@+id/recipe_display_category"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>